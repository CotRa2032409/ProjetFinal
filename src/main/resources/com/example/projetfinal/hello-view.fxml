    <top>
        <MenuBar prefHeight="0.0" prefWidth="758.0" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Mode">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Standard" />
                        <MenuItem mnemonicParsing="false" onAction="#onScientifiqueButtonClick" text="Scientifique" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <VBox alignment="CENTER" fillWidth="false" prefHeight="477.0" prefWidth="823.0" spacing="20.0" BorderPane.alignment="CENTER">
            <TextField fx:id="textField" promptText="Votre calcul">
                <VBox.margin>
                    <Insets bottom="60.0" />
                </VBox.margin>
                <font>
                    <Font size="30.0" />
                </font>
            </TextField>
            <GridPane prefHeight="229.0" prefWidth="645.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Button fx:id="bou7" mnemonicParsing="false" onAction="#onNumber7Click" prefHeight="126.0" prefWidth="369.0" text="7" />
                    <Button fx:id="bou4" mnemonicParsing="false" onAction="#onNumber4Click" prefHeight="154.0" prefWidth="410.0" text="4" GridPane.rowIndex="1" />
                    <Button fx:id="bou1" mnemonicParsing="false" onAction="#onNumber1Click" prefHeight="95.0" prefWidth="432.0" text="1" GridPane.rowIndex="2" />
                    <Button fx:id="bou0" mnemonicParsing="false" onAction="#onNumber0Click" prefHeight="164.0" prefWidth="394.0" text="0" GridPane.rowIndex="3" />
                    <Button fx:id="bou8" mnemonicParsing="false" onAction="#onNumber8Click" prefHeight="80.0" prefWidth="371.0" text="8" GridPane.columnIndex="1" />
                    <Button fx:id="bou5" mnemonicParsing="false" onAction="#onNumber5Click" prefHeight="75.0" prefWidth="389.0" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
