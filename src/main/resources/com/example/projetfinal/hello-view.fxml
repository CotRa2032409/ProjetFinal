                    <Button fx:id="bouFois" mnemonicParsing="false" onAction="#onMultiplicationClick" prefHeight="126.0" prefWidth="369.0" text="*" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                    <Button fx:id="bouDiviser" mnemonicParsing="false" onAction="#onDivisionClick" prefHeight="126.0" prefWidth="369.0" text="/" GridPane.columnIndex="4" GridPane.rowIndex="2" />
                    <Button fx:id="bouEgal" mnemonicParsing="false" onAction="#onEgalClick" prefHeight="57.0" prefWidth="312.0" text="=" GridPane.columnIndex="4" GridPane.rowIndex="3" />
                    <Button fx:id="bouEffacer" mnemonicParsing="false" onAction="#onEffacerClick" prefHeight="57.0" prefWidth="312.0" text="Effacer" GridPane.columnIndex="5" GridPane.rowIndex="3" />
                </children>
            </GridPane>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
